        <div class="a-u-b-c-element" id="achivment-block">
          <div class="achivment-box">
            <span>450+</span><br> выполненых <br> проектов
          </div>
          <div class="achivment-box">
            <span>89</span><br> сотрудников<br> в штате
          </div>
          <div class="achivment-box">
            <span>16</span><br> стран
          </div>
          <div class="achivment-box">
            <span>500+</span><br> тысяч<br> пользователей
          </div>
        </div>
      </div>
    </div>
    <div id="clients-block">
      <h1 class="block-head">Нам доверяют</h1>
      <div id="clients-content">
        <div class="client"></div>
        <div class="client"></div>
        <div class="client"></div>
        <div class="client"></div>
        <div class="client"></div>
        <div class="client"></div>
